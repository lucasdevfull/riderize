{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    
    "paths": {
      "@/*": ["src/*"],
      "@modules/*": ["src/modules/*"],
      "@services/*": [
        "src/modules/auth/service/*",
        "src/modules/users/service/*",
        "src/modules/pedais/service/*"
      ],
      "@repositories/*": [
        "src/modules/auth/repository/*",
        "src/modules/users/repository/*",
        "src/modules/pedais/repository/*"
      ],
      "@dtos/*": ["src/dto/*"],
      "@models/*": ["src/models/*"],
      "@guards/*": ["src/modules/auth/guard/*"],
      "@resolvers/*": [
        "src/modules/auth/resolver/*",
        "src/modules/users/resolver/*",
        "src/modules/pedais/resolver/*"
      ],
      "@exception/*": [
        "src/modules/users/exception/*",
        "src/modules/auth/exception/*",
        "src/modules/pedais/exception/*"
      ],
      "@common/*": ["src/common/*"]
    },
    "allowJs": true
  }
}
