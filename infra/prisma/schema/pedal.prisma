model Pedal {
  pedalId               String      @id @default(uuid()) @map("pedal_id") @db.Uuid
  name                  String      @db.VarChar(50)
  startDateRegistration DateTime    @db.Date
  endDateRegistration   DateTime    @map("end_date_registration") @db.Date
  additionalInfomation  String?     @map("additional_infomation") @db.VarChar(100)
  startPlace            String      @map("start_place") @db.VarChar(100)
  participantsLimit     Int?        @map("participants_limit")
  userId                String      @map("user_id") @db.Uuid
  inscricao             Inscricao[]
  user                  User        @relation(fields: [userId], references: [userId])
}

model Inscricao {
  rideId           String   @id @default(uuid())
  pedalId          String   @map("pedal_id") @db.Uuid
  userId           String   @map("user_id") @db.Uuid
  subscriptionDate DateTime @default(dbgenerated("CURRENT_DATE")) @map("subscription_date") @db.Date
  pedal            Pedal    @relation(fields: [pedalId], references: [pedalId])
  user             User     @relation(fields: [userId], references: [userId])
}
